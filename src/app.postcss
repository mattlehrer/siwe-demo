/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body,
body > div:first-child {
	min-height: 100dvh;
}

p {
	@apply my-2 max-w-prose text-lg text-gray-700;
}

p > a,
li > a {
	@apply text-blue-500 underline;
}
p > a:hover,
li > a:hover {
	@apply text-blue-800;
}
